  {
    "name": "Section Cancel",
    "settings": [
	  	{
        "type":      "radio",
   			"id":        "offer_variant",
   			"label":     "Offer Variant",
   			"options": [
     			{ 
     				"value": "0", 
     				"label": "First" 
     			},
     			{ 
     				"value": "1", 
     				"label": "Second" 
     			}
   			],
   			"default":   "1"
      }
    ]
  }
{% endschema %}

