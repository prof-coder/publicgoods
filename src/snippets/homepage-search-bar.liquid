<script>
  
  let clicked = false;
  var showDesktop = false;
  var showMobile = false;
  
  function ShowDesktop() {
     $(".input-group-field").show();
     $(".magnifying-glass").hide();
     $(".magnifying-glass-2").show();

     $(".border-around-search").show();
     $(".input-group-btn").css("position", "absolute");
    	showDesktop = true;
  }
  
  function HideDesktop() {
     $(".input-group-field").hide();
     $(".magnifying-glass").show();
     $(".magnifying-glass-2").hide();

     $(".border-around-search").hide();
     $(".input-group-btn").css("position", "relative");
    showDesktop = false;
  }
  
  function ShowTablet() {
    console.log('show tablet');
    $("#mobile-search-input").show();
    $(".mobile-search-container").show();
    $(".mobile-search-bar").show();
    $("#mobile-search-exit-img").show();
  }
  
  function ShowMobile() {
    console.log('show mobile');
    $("#mobile-search-input").show();
    $(".mobile-search-container").show();
    $(".mobile-search-bar").show();
    $("#mobile-search-exit-img").show();
    showMobile = true;
  }
  
  function HideMobile() {
    $("#mobile-search-input").hide();
    $(".mobile-search-container").hide();
    $(".mobile-search-bar").hide();
    $("#mobile-search-exit-img").hide();
    showMobile = false;
  }
  
  $(".magnifying-glass-for-tablet").click(function(e) {
    if(showMobile) {
      HideMobile()
    } else {
      ShowMobile()
    }
  })
 
  
  $(".magnifying-glass").click(function(e){
      	e.preventDefault()
        if(showDesktop) {
        	HideDesktop();
        } else {
        	ShowDesktop();
        }
    
        setTimeout(function() {
          $('.input-group-field').focus()
        },500)
  });
  
  
  	$(".mobile-mag-icon").click(function(e){
      	e.preventDefault()
        
        if(showMobile) {
        	HideMobile();
        } else {
        	ShowMobile();
        }	
      
      setTimeout(function() {
   		$('.input-group-field').focus()
        $('.mobile-search-bar').prop('autofocus');
	  },500)
    });
  
  	$(".mobile-search-exit").click(function(e){
      	e.preventDefault()
        HideMobile();
      	HideDesktop();
      $(".magnifying-glass-2").show();
    });
  
  $(window).resize(function(){ 
    if(window.innerWidth > 1159) {
      HideMobile();
      if(showMobile) {
        ShowDesktop();
      }
    } else if(window.innerWidth < 960) {
      if(showDesktop) {
        HideDesktop();
        ShowMobile();
        $(".magnifying-glass-2").css("display", "inline")
      }
    } else {
    	if(showMobile) {
      	HideMobile();
        ShowDesktop();
      }
    }
  });
  
    
</script>

