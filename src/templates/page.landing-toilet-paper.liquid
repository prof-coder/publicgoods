            {{ 'cool.png' | asset_url | img_tag }}
            <p>“Provides simple products <br>and convenience.”</p>
        </div>
        <div class="pg-col pg-col-3 single-review">
            {{ 'detail.png' | asset_url | img_tag }}
            <p>“The easiest way to restock <br>your bathroom.”</p>
        </div>
      </div>
    </div>
  </div>
</section>




