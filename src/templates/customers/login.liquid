      {% if shop.checkout.guest_login %}
        {% form 'guest_login' %}
          <div class="form_row">
            <input type="submit" value="{{ 'customer.login.guest_continue' | t }}">
          </div>
        {% endform %}
      {% endif %}
!-->
    </div>
    <div class="column_6">
      <img src="{{ 'girl.png' | asset_url }}" alt="" class="fullSize" style="display:none;"/>
    </div>
  </div>
</div>
  </div>

<script type="text/javascript">

 $(document).ready(function() {
    var url = document.referrer;
    if(url.indexOf("share?tkbl_campaign_id=1159669") > -1){
      $("#redirect_url").val("https://www.publicgoods.com/pages/share?tkbl_campaign_id=1159669");
    }else if (url == 'https://www.publicgoods.com/') {
      $("#redirect_url").val("https://www.publicgoods.com/collections/all-products"); 
    }else if(url.indexOf("/a/member") > 0 || document.cookie.indexOf("redirect_custom_checkout_page")){
      $("#redirect_url").val("/checkout/"); 
      createCookie("redirect_custom_checkout_page", "yes", 1);
    }else{
      $("#redirect_url").val(url);
    }

   
      var pro = $("#ResetSuccess").css("display");
      if(pro == "none") {
        console.log(1);
      }else {
        console.log(0);
        $("#ResetSuccess").hide();
        $("#CustomerLoginForm").hide();
        $("#RecoverPasswordForm").hide();
        $("#RecoverCheckEmail").show();
      }
   
      createCookie("customerReachedLoginPG", "yes");
  
  });
</script>

