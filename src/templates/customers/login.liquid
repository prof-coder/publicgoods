<!-- /templates/customers/login.liquid -->
<div id="login_page">
<div id="account_page">
  <div class="row clearfix">
    <div class="column_6">
      <div class="note form-success" id="ResetSuccess" style="display:none;">
        {{ 'customer.recover_password.success' | t }}
      </div>

      <div id="CustomerLoginForm">
        <h3 id="customer-login-welcome">Welcome back.</h3>
        <p id="customer-login-to-account">Log into your account.</p>    
        {% form 'customer_login' %}
            <input type="hidden" name="checkout_url" id="redirect_url" value="" />
<!--         <input type="hidden" name="checkout_url" value="/collections/all-products" /> -->
          {{ form.errors | default_errors }}
          <div class="form_row">
            <input type="email" name="customer[email]" id="CustomerEmail" class="input-full{% if form.errors contains 'email' %} error{% endif %}" placeholder="{{ 'customer.login.email' | t }}" autocorrect="off" autocapitalize="off" autofocus>
          </div>

          {% if form.password_needed %}
            <div class="form_row">
              <input type="password" value="" name="customer[password]" id="CustomerPassword" class="input-full{% if form.errors contains 'password' %} error{% endif %}" placeholder="{{ 'customer.login.password' | t }}">
            </div>
          {% endif %}
        
          <div class="form_row">
            {% if form.password_needed %}
              <a class="link" href="#recover" id="RecoverPassword">{{ 'customer.login.forgot_password' | t }}</a>
            {% endif %}
            <!--<a href="/" class="link">{{ 'customer.login.cancel' | t }}</a>!-->
          </div>

          <div class="form_row">
            <input type="submit" value="{{ 'customer.login.sign_in' | t }}">
          </div>

        {% endform %}
      </div> <!-- Customer Login Form !-->

      <div id="RecoverPasswordForm" style="display: none;">
        <div>
          <h1 style="font-size: 28px; line-height: 34px;">Forgot your password?</h1>
          <br>
          <p style="font-size: 16px; line-height: 22px;">Enter your email address and we will email you a link to reset your password.</p>
        </div>
        {% form 'recover_customer_password' %}
          {{ form.errors | default_errors }}

          {% if form.posted_successfully? %}
            {% assign resetPassword = true %}
          {% endif %}

          <div class="form_row">
            <input type="email" value="" name="email" id="RecoverEmail" class="input-full" placeholder="{{ 'customer.recover_password.email' | t }}" autocorrect="off" autocapitalize="off">
          </div>

          <div class="form_row">
            <input type="submit" id="reset_pass_email" value="Reset Your Password" style="margin-top:10px;margin-bottom:20px;">
            {% comment %}<a id="HideRecoverPasswordLink" class="link">{{ 'customer.recover_password.cancel' | t }}</a>{% endcomment %}
          </div>
        {% endform %}
      </div> <!-- Recover Form End !-->
      
      <div id="RecoverCheckEmail" style="display: none;">
        <div>
          <h1 style="font-size: 28px; line-height: 34px;">Please check <br> your email.</h1>
          <br>
          <p style="font-size: 16px; line-height: 22px; margin-bottom: 35px;">We sent you a link to reset your password.</p>
        </div>
        
<!--         <div class="form_row">
          <input type="email" value="" name="email" id="RecoverEmail" class="input-full" placeholder="{{ 'customer.recover_password.email' | t }}" autocorrect="off" autocapitalize="off">
        </div> -->
        
      </div> <!-- Recover Email End !-->
<!-- Disable Guest Login !-->      
