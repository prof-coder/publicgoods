<div class="prod-wrapper">
  <div class="row">
    
      <div class="column_12">
      <div class="collections clearfix">
        {% for product in collections.all-products.products  limit:6 %}

          {%- comment %}<locksmith:011c>{% endcomment -%}
            {%- capture var %}{% render 'locksmith-variables', scope: 'subject', subject: product, subject_parent: collections.all-products, variable: 'transparent' %}{% endcapture %}{% if var == "true" %}{% else %}{% continue %}{% endif -%}
          {%- comment %}</locksmith:011c>{% endcomment -%}

          {% assign name = 'product' | append:product.id %}
          {% assign idNo = name | append:'-no' %}
          {% assign idYes = name | append:'-yes' %}
		  
          {% assign checkedNo = 'checked' %}
          {% assign checkedYes = '' %}
          {% assign opacityClass = '' %}
          {% assign available = true %}

          {% if product.variants[0].inventory_quantity <= 0 %}
          	{% assign available = false %}
          {% endif %}

          {% if shop.customer_accounts_enabled %}
          	{% if customer %}
        		{% assign checkedNo = 'disabled' %}
        		{% assign checkedYes = 'checked' %}
        		{% assign opacityClass = 'opacity-3' %}

        		{% assign available = true %}
        		{% if product.variants[0].inventory_quantity <= 0 %}
        			{% assign available = false %}
        		{% endif %}
        	{% endif %}
          {% endif %}
        
          <div class="collection">
            <div class="collection_header">
              <a>
                <img src="{{ product.featured_image.src | img_url: 'master' }}" alt="{{ product.featured_image.alt | escape }}">
              </a>
              <div class="collection_action" rel="{{name}}">
                {% if available == true %}
                	<div class="collection_to_cart" rel="{{name}}">ADD TO CART</div>
                	<div class="collection_update">
                      <div class="collection_update_spans clearfix">
                        <span class="collection_minus" rel="{{name}}"></span>
                        <div>
                          <span class="collection_count" id="collection_count_{{product.id}}"></span> IN CART
                        </div>
                        <span class="collection_plus" rel="{{name}}"></span>
                      </div>
                    </div>
                {% else %}
                	<div class="collection_coming_soon">SOLD OUT</div>
                {% endif %}
              </div> <!-- Collection Action End !-->
            </div>
            <div class="collection_body">
              <label style="padding-bottom:0px;" class="collection_title">{{ product.title }}</label>
             
             
<small style="color: #a6a8ab; font-size: 12px; padding: 10px 0 7px 0; display: block;" >Traditional retail: {{ product.variants[0].price | minus: product.variants[1].price | money }}</small>
              <div><label><font style="font-weight:bold;color:#000;">{{ product.variants[1].price | money  }}</font></label></div>

              <!--<div><input type="radio"/><span>$24 <font>Non-Member Price</font></span></div>
              <div><input type="radio"/><span>$3 <font>No Markup (Members Only)<small>With membership, from $10 / month</small></font></span></div>!-->
            </div>
          </div>
        {% endfor %}
      </div> <!-- Collections End !-->

    </div>
      </div><!-- Row End !-->
  

  
  <a class="btn open_popup" style="    margin: 0px auto 55px auto; width:110px; padding: 15px 50px;"> Start now</a>
</div> <!-- Page Content End !-->
  </div>
  



